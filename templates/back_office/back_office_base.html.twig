{% extends 'base.html.twig' %}
{% block html %}
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('globals') }}
            <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
            <![endif]-->

            <!-- Google Font -->
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
        {% endblock stylesheets %}
    </head>
    <body class="hold-transition skin-blue sidebar-mini">
    {% block body_content %}
        <div class="wrapper">
            <header class="main-header">
                {% block header %}
                    {% include 'back_office/block/_header.html.twig' %}
                {% endblock header %}
            </header>
            {% include 'back_office/block/_sidebar.html.twig' %}
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                {% block content %}
                    <!-- Content Header (Page header) -->
                    <section class="content-header">
                        {% block content_header %}
                            <h1>
                                Dashboard
                                <small>Control panel</small>
                            </h1>
                            <ol class="breadcrumb">
                                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                                <li class="active">Dashboard</li>
                            </ol>
                        {% endblock content_header %}
                    </section>

                    <!-- Main content -->
                    <section class="content">
                        {% block content_body %}
                            content body
                        {% endblock content_body %}
                    </section>
                    <!-- /.content -->
                {% endblock content %}
            </div>
            <!-- /.content-wrapper -->
            {% block footer %}
                {% include 'generic/blocks/_footer.html.twig' %}
            {% endblock footer %}
            {% block control_sidebar %}
                {% include 'back_office/block/_control_sidebar.html.twig' %}
            {% endblock control_sidebar %}
        </div>
        <!-- ./wrapper -->
    {% endblock body_content %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock javascripts %}
    </body>
{% endblock html %}
